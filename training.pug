nav#mainNav.navbar.navbar-default.navbar-fixed-top.affix-2
    .container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header
            button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#bs-example-navbar-collapse-1')
                span.sr-only Zmie&nacute; nawigacj&eogon;
                |  Menu
                i.fa.fa-bars
            a.navbar-brand.page-scroll(href='../' + index + "#" + training.id) < #{general.back}
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-right
                each value, key in nav
                    li
                        a.page-scroll(href='../' + index + `#${value.href}`) #{value.name}
        // /.navbar-collapse
    // /.container-fluid
section#trainings.overflow-hidden.no-padding-bottom
    .container
        .col-lg-12.display-flex.relative
            .flex-1
                .col-lg-12.text-center
                    h1.section-heading #{training.name}
                    hr.primary
                p.text-muted #{training.detailDescription}

                .text-center
                    img.max-height(style={'margin-bottom': '20px'}, src=training.src)
                // Button trigger modal
            if training.lists
                .flex-1(style={'align-items': 'center'})
                    .general #{general.topics2}:
                    .panel-group.accordion#accordion(role="tablist" aria-multiselectable="true")
                            each trainingObj, index in training.lists
                                .panel.panel-default
                                    .panel-heading(role="tab" id="heading" + index)
                                            h4.panel-title
                                                a.collapsed(role='button' data-toggle='collapse' data-parent='#accordion' data-target="#collapse" + index  href="#collapse" + index aria-expanded=!index aria-controls="collapseOne" + index)
                                                    | #{trainingObj.name}
                                    .panel-collapse.collapse(id='collapse' + index role="tabpanel" aria-labelledby="heading" + index)
                                        .panel-body
                                            ul
                                                each topic in trainingObj.list
                                                    li #{topic}
            if training.list
                .flex-1
                    .panel.panel-default
                        .panel-heading #{general.topics}
                        .panel-body
                            ul
                                each topic in training.list
                                    li #{topic}


section.bg-primary.small-padding.navbar-fixed-bottom
    .container.display-flex.align-center
